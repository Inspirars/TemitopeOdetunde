<%- include("./layout/header.ejs")%>

<nav class="flex bg-grey-100 justify-between items-center py-1 px-4 md:px-10 md:pt-8 lg:px-20 font-inter  fixed w-full overflow-hidden " id="nav">
    <div class="lg:flex items-center gap-[72px]">
        <a href="/"><img src="/images/logo.svg" alt="Temitope svg"></a>
        <ul class=" hidden lg:flex list-none lg:gap-11 text-base text-black-200 font-normal">
          <a href="/about">
            <li>About</li>
          </a>
          <a href="/books">
            <li>Book</li>
          </a>
          <a href="/shop">
            <li>Shop</li>
          </a>
          <a href="/aim">
            <li>AIM</li>
          </a>
          <a href="/blog">
            <li>BLOG</li>
          </a>
        </ul>
    </div>
    <img src="/images/hamburger.png" alt="" class="lg:hidden">
    <div class="hidden lg:flex" >
        <button class="text-lg md:px-5 md:py-4 rounded font-semibold bg-purple text-white border border-purple hover:bg-grey-100 hover:text-purple transition-all duration-700">
            Join Community
        </button>
    </div>
</nav>

<main class="flex justify-center px-5 pt-24 pb-11 lg:pt-44">
    <section class="w-full md:w-[85%] lg:max-w-[55.55vw]">
    <div class="flex items-center gap-2 pb-10 md:pb-[52px]">
        <p>
            Blog
        </p>
        <img src="/images/blogArrow.svg" alt="blog arrow">
        <p>
            Story
        </p>
    </div>
    <%if(story){%>
        <div>
            <p class="p-2 bg-[#EBD7FF] w-fit mb-2 md:mb-4 text-purple rounded-md"><%=story.tag%></p>
            <h1 class="text-[clamp(28px,2.5vw,36px)] pb-5 font-bold lg:leading-10">
                <%=story.title%>
            </h1>
            <div class="flex items-center gap-5 pb-5 md:pb-8">
                <div class="flex items-center">
                    <img src="/images/dp.png" alt="display png">
                    <p>Temitope Odetunde</p>
                </div>
                <p><%=story.formattedDate%></p>
            </div>
           <div class="pb-8">
            <img class="lg:w-[55.55vw] rounded-xl " src=<%=story.image %> alt="Story image">
           </div>
            <%-story.content%>
           
        </div>
    <%}%>
    </section>
</main>
<section class="px-14 lg:px-[clamp(90px,7.63vw,110px)] py-10 md:py-14 lg:py-24">

</section>

